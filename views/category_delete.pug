extends layout

block content
  h1 #{title}: #{category.name}

  if sub_category.length

    p #[strong Delete the following sub-categories before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Sub-categories

      dl
      each tech in sub_category
        dt
          a(href=tech.url) #{tech.name}
        dd #{tech.summary}

  else
    p Do you really want to delete this Category?

    form(method='POST' action='')
      div.form-group
        input#categoryid.form-control(type='hidden',name='categoryid', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete