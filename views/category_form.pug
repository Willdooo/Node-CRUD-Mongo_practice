extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Category' name='name' value=(undefined===category ? '' : category.name))
      label(for="summary") Summary:
      input#summary.form-control(type="text", placeholder="Short summary" name='summary' value=(undefined===category ? '' : category.summary))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg